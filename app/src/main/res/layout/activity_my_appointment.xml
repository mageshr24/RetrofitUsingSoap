<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@drawable/gradient_bg"/>

        <LinearLayout
                android:padding="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:inputType="" android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/customerName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:singleLine="true"
                        android:hint="Customer Name"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:id="@+id/appointmentDate"
                        android:inputType="" android:padding="10dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:singleLine="true"
                        android:fontFamily="@font/segoeui"
                        android:hint="Appointment Date"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="150dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/specialNote"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text|textMultiLine"
                        android:fontFamily="@font/segoeui"
                        android:hint="Special Note"
                        android:textColor="#DC070707"
                        android:gravity="top"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                    android:id="@+id/salesCallBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_bg"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20sp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
