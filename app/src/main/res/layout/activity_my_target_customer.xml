<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@drawable/gradient_bg"/>

        <LinearLayout
                android:padding="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:inputType="" android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/customerName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="Customer Name"
                        android:textColor="#DC070707"
                        android:singleLine="true"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                    android:layout_marginTop="21dp"
                    android:background="@drawable/card_view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                <Spinner
                        android:id="@+id/typeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown"/>

                <ImageView
                        android:contentDescription="TODO" android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_marginTop="21dp"
                    android:background="@drawable/card_view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                <Spinner
                        android:id="@+id/customerStatusSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown"/>

                <ImageView
                        android:contentDescription="TODO" android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down"/>

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:id="@+id/boardOfDirector"
                        android:inputType="" android:padding="10dp"
                        android:clickable="true"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:singleLine="true"
                        android:hint="Board of director"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:id="@+id/website"
                        android:inputType="" android:padding="10dp"
                        android:clickable="true"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="Website"
                        android:singleLine="true"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="150dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text|textMultiLine"
                        android:fontFamily="@font/segoeui"
                        android:hint="Address"
                        android:textColor="#DC070707"
                        android:gravity="top"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:id="@+id/phone"
                        android:inputType="number"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="Phone Number"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:inputType="" android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="City"
                        android:singleLine="true"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:inputType="" android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/fax"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="Fax"
                        android:singleLine="true"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:inputType="" android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/contactPerson"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="Contact Person"
                        android:singleLine="true"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:inputType="" android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/designation"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="Designation"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        android:singleLine="true"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:inputType="" android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/mobilNumber"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="Mobile Number"
                        android:singleLine="true"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/emailId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/segoeui"
                        android:hint="Email Id"
                        android:textColor="#DC070707"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                    android:layout_marginTop="21dp"
                    android:background="@drawable/card_view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                <Spinner
                        android:id="@+id/currentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown"/>

                <ImageView
                        android:contentDescription="TODO" android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down"/>

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="21dp"
                    android:layout_height="150dp"
                    android:background="@drawable/card_view_bg"
                    android:textColorHint="@color/colorHint">

                <EditText
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/remarks"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text|textMultiLine"
                        android:fontFamily="@font/segoeui"
                        android:hint="Remarks"
                        android:singleLine="true"
                        android:textColor="#DC070707"
                        android:gravity="top"
                        android:textColorHint="#7C070707"
                        app:backgroundTint="@color/colorHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                    android:id="@+id/salesCallBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_bg"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20sp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
